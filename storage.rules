rules_version = '2';

// Craft rules based on data in your Firestore database
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to callsheets folder
    match /callsheets/{allPaths=**} {
      allow read: if true;  // Public read access for callsheet images
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Allow public read access to images folder (for converted callsheet images)
    match /images/{allPaths=**} {
      allow read: if true;  // Public read access for converted images
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Allow public read access to previews folder
    match /previews/{allPaths=**} {
      allow read: if true;  // Public read access for preview images
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 