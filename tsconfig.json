{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "lib": [
      "es2019",
      "dom"
    ],
    "types": [
      "node",
      "lodash",
      "express",
      "zone.js",
      "jest"
    ],
    "paths": {
      "stream": [
        "./node_modules/stream-browserify"
      ],
      "fs": ["./node_modules/fs-web"]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "types": [ "node" ],
    "enableIvy": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json" // Include JSON files in your TypeScript project
  ],
  "exclude": [
    "**/*.spec.ts", 
    "**/testingData/**/*",
    "src/app/testing/**/*"
  ]
}
